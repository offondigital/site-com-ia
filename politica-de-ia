        document.querySelectorAll('a[href="javascript:history.back()"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                if (document.referrer && document.referrer.includes(window.location.hostname)) {
                    history.back();
                } else {
                    window.location.href = '/';
                }
            });
        });
    </script>
</body>
</html>
